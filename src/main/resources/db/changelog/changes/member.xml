<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="sasa.fajkovic" id="1">
        <createTable tableName="members">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="VARCHAR(255)"></column>
            <column name="last_name" type="VARCHAR(255)"></column>
            <column name="date_of_birth" type="DATE"></column>
            <column name="postal_code" type="VARCHAR(10)"></column>
            <column name="picture" type="BLOB"></column>
        </createTable>
        <rollback>
            <dropTable tableName="members"/>
        </rollback>
    </changeSet>

    <changeSet author="sasa.fajkovic" id="2">
        <addColumn tableName="members">
            <column name="is_active" type="BOOLEAN"></column>
        </addColumn>
    </changeSet>

    <changeSet author="sasa.fajkovic" id="3">
        <addNotNullConstraint columnName="first_name" tableName="members"></addNotNullConstraint>
        <addNotNullConstraint columnName="last_name" tableName="members"></addNotNullConstraint>
    </changeSet>
</databaseChangeLog>